<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.Goval.FacturaDigital.Pages.Login.LoginPage"
             BackgroundColor="#EEEEEE">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Orientation="Vertical"
                     WidthRequest="450">
            <Image Source="icon.png" WidthRequest="300" HeightRequest="300" >
                
            </Image>
            <StackLayout BackgroundColor="White" Padding="10" Spacing="10">
                <Entry HorizontalOptions="FillAndExpand" Placeholder="Usuario"/>
                <Entry HorizontalOptions="FillAndExpand" Placeholder="Contraseña"/>
                <Button HorizontalOptions="FillAndExpand" Text="Iniciar Sesión"/>
                <StackLayout Orientation="Horizontal">
                    <Label HorizontalOptions="End" FontSize="Small" Text="Recordar Usuario"/>
                    <Switch HorizontalOptions="End"/>
                </StackLayout>
            </StackLayout>
            <Label Text="Creado por Goval | Version 1.0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>